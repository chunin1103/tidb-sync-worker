# Google Gemini API Configuration
GOOGLE_API_KEY=your_google_api_key_here

# Neon PostgreSQL Database (for persistent chat history)
# Get your connection string from: https://console.neon.tech
# Format: postgresql://user:password@host/database?sslmode=require
DATABASE_URL=postgresql://username:password@ep-xxx-xxx.us-east-1.aws.neon.tech/agent_garden?sslmode=require

# Upstash Redis Configuration (for Celery task queue)
# Get your Redis URL from: https://console.upstash.com/
# Format: rediss://default:YOUR_PASSWORD@YOUR_ENDPOINT.upstash.io:6379
REDIS_URL=rediss://default:your_password@your-endpoint.upstash.io:6379

# Flask Configuration (Optional)
FLASK_ENV=development
FLASK_DEBUG=True

# Server Port (Optional - defaults to 5001 to avoid macOS AirPlay conflict on 5000)
# PORT=5001
